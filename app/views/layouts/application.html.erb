<!DOCTYPE html>
<html>
<head>
  <title>Thoughtbox</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |type, msg| %>
  <%= content_tag :p, sanitize(msg), class: 'hidden' %>
  <div class="flash_<%= type %>">
  </div>
<% end %>


  <nav>
    <div class="nav-wrapper">
      <%= link_to "ThoughtBox", root_path, class: "brand-logo center", id: "logo" %>
      <ul class="right hide-on-med-and-down">
        <% if current_user %>
          <li><%= link_to "Logout", logout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Login", login_path %></li>
        <% end %>
        <% unless current_user %>
          <li><%= link_to "Create Account", new_user_path %></li>
        <% end %>
  </div>
</nav>
<% if current_user %>
  <h3 class='center'> Welcome, <%= current_user.username %>! </h3>
<% end %>

<%= yield %>


</body>
</html>
